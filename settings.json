{
    // Настройки размера окна игры
    "WindowSize": {
        "Width": 0,    // Ширина окна в пикселях (0 = автоматический размер)
        "Hight": 0     // Высота окна в пикселях (0 = автоматический размер)
    },
    
    // Настройки искусственного интеллекта (бота)
    "Bot": {
        "IsWhiteBot": false,    // Играет ли бот за белые фигуры (true/false)
        "IsBlackBot": true,     // Играет ли бот за черные фигуры (true/false)
        "WhiteBotLevel": 0,     // Уровень сложности бота для белых (0-10, где 0 = легкий, 10 = сложный)
        "BlackBotLevel": 5,     // Уровень сложности бота для черных (0-10, где 0 = легкий, 10 = сложный)
        "BotScoringType": "NumberAndPotential",  // Алгоритм оценки позиции: "NumberAndPotential" учитывает количество и потенциал фигур
        "BotDelayMS": 0,        // Задержка хода бота в миллисекундах (0 = без задержки)
        "NoRandom": false,      // Отключить случайность в выборе ходов бота (true = детерминированная игра)
        "Optimization": "O1"    // Уровень оптимизации алгоритма бота (O0, O1, O2, O3)
    },
    
    // Общие настройки игры
    "Game": {
        "MaxNumTurns": 120     // Максимальное количество ходов в игре (игра заканчивается ничьей если достигнут лимит)
    }
}
